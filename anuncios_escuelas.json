<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Los Contactos de Mamá - Escuela</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
:root {
    --primary: #8db600;
    --secondary: #dc143c;
    --accent: #ff8800;
    --white: #ffffff;
    --dark: #2c3e50;
    --text: #34495e;
    --shadow: 0 4px 6px rgba(0,0,0,0.1);
    --transition: all 0.3s ease;
}

/* Reset */
* { margin: 0; padding: 0; box-sizing: border-box; }
body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; line-height: 1.6; color: var(--text); }

/* Header */
header {
    background: var(--primary);
    color: var(--white);
    padding: 1rem 2rem;
    box-shadow: var(--shadow);
    position: sticky;
    top: 0;
    z-index: 1000;
}
.header-container { max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; }
.logo { font-size: 1.8rem; font-weight: bold; color: var(--white); text-decoration: none; }
.nav { display: flex; list-style: none; gap: 1rem; }
.nav a { color: var(--white); text-decoration: none; font-weight: 500; transition: var(--transition); }
.nav a:hover { color: var(--accent); }
.nav-toggle { display: none; background: none; border: none; font-size: 1.5rem; cursor: pointer; color: var(--white); }

/* Layout */
.main-container { display: flex; max-width: 1200px; margin: 2rem auto; gap: 2rem; }
.central-section { flex: 3; display: grid; gap: 1.5rem; margin-bottom: 2rem; }
.anuncio-grid { display: grid; gap: 1rem; }
.anuncio-prioridad { grid-template-columns: repeat(3, 1fr); }
.anuncio-intermedio { grid-template-columns: repeat(4, 1fr); }
.anuncio-basico { grid-template-columns: repeat(6, 1fr); }
.anuncio-card {
    background: var(--white);
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
    box-shadow: var(--shadow);
    transition: var(--transition);
}
.anuncio-card:hover { transform: translateY(-5px); box-shadow: 0 8px 12px rgba(0,0,0,0.2); }
.anuncio-card img { width: 100%; border-radius: 8px; margin-bottom: 0.5rem; }
.btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--secondary);
    color: var(--white);
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: all 0.3s ease;
}
.btn:hover { background: var(--accent); transform: scale(1.05); }

/* Sidebar */
.sidebar { flex: 1; display: flex; flex-direction: column; gap: 1rem; }
.banner { width: 100%; border-radius: 8px; overflow: hidden; box-shadow: var(--shadow); position: relative; }
.banner img { width: 100%; display: block; }
.floating-banner { position: sticky; top: 100px; }

/* Footer */
footer { background: var(--dark); color: var(--white); padding: 3rem 1rem; margin-top: 2rem; }
.footer-container { max-width: 1200px; margin: 0 auto; display: flex; flex-wrap: wrap; gap: 2rem; justify-content: space-between; }
.footer-column { flex: 1 1 200px; }

/* WhatsApp */
.whatsapp-btn {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: #25d366;
    color: #fff;
    padding: 0.75rem 1rem;
    border-radius: 50px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: bold;
    text-decoration: none;
    box-shadow: var(--shadow);
    z-index: 1000;
}

/* Responsive */
@media(max-width: 1024px){ .main-container { flex-direction: column; } .central-section .anuncio-grid { grid-template-columns: repeat(2,1fr); } }
@media(max-width: 600px){ .central-section .anuncio-grid { grid-template-columns: 1fr; } .sidebar { flex-direction: row; overflow-x: auto; } .sidebar .banner { min-width: 200px; } }
@media (max-width: 768px){ .nav { display: none; flex-direction: column; width: 100%; margin-top: 1rem; background: var(--primary); padding: 1rem; border-radius: 8px; } .nav.active { display: flex; } .nav-toggle { display: block; } }
</style>
</head>
<body>

<header>
    <div class="header-container">
        <a href="escuelas.html" class="logo">Los Contactos de Mamá ❤</a>
        <button class="nav-toggle" onclick="document.querySelector('.nav').classList.toggle('active')">☰</button>
        <ul class="nav">
            <li><a href="escuelas.html">Escuela, Institutos & Cursos</a></li>
            <li><a href="nutricion.html">Nutrición, Salud & Deporte</a></li>
            <li><a href="fiestas.html">Fiestas, Eventos & Convivios</a></li>
            <li><a href="hogar.html">Reparaciones del Hogar</a></li>
            <li><a href="family.html">Family Friendly & Tiempo Libre</a></li>
            <li><a href="finanzas.html">Finanzas, Legal & Asociaciones</a></li>
            <li><a href="#contacto">Contacto</a></li>
        </ul>
    </div>
</header>

<div class="main-container">
    <div class="central-section" id="anuncios-container">
        <!-- Sección de anuncios cargada dinámicamente -->
    </div>

    <div class="sidebar">
        <div class="banner"><img src="banner1.png" alt="Banner Fijo"></div>
        <div class="banner floating-banner"><img src="banner2.png" alt="Banner Flotante 1"></div>
        <div class="banner floating-banner"><img src="banner3.png" alt="Banner Flotante 2"></div>
    </div>
</div>

<footer>
    <div class="footer-container">
        <div class="footer-column">
            <h3>Los Contactos de Mamá</h3>
            <p>Contacto: info@loscontactosdemama.com</p>
            <p>Tel: +521 442 1697170</p>
        </div>
        <div class="footer-column">
            <h3>Servicios</h3>
            <ul>
                <li>Anuncios en Web Page</li>
                <li>Lead Generating</li>
                <li>Emailing Campaign</li>
                <li>Ux/Ui Design</li>
            </ul>
        </div>
        <div class="footer-column">
            <h3>Horario</h3>
            <ul>
                <li>Lunes a Viernes: 11:00 - 18:00</li>
                <li>Sábados: Cerrado</li>
                <li>Domingos: Cerrado</li>
            </ul>
        </div>
    </div>
</footer>

<a href="https://wa.me/5214421697170" class="whatsapp-btn">
    <i class="fab fa-whatsapp"></i> WhatsApp Anúnciate!
</a>

<script>
  // Cargar anunciantes desde JSON
  fetch('anunciantes.json')
    .then(res => res.json())
    .then(data => {
        const contenedor = document.getElementById("anuncios-container");
        const categorias = {
            prioridad: { gridClass: "anuncio-prioridad" },
            intermedio: { gridClass: "anuncio-intermedio" },
            basico: { gridClass: "anuncio-basico" }
        };

        Object.keys(categorias).forEach(cat => {
            const seccion = document.createElement("div");
            seccion.classList.add("anuncio-grid", categorias[cat].gridClass);

            data.filter(a => a.categoria === cat).forEach(a => {
                const card = document.createElement("div");
                card.classList.add("anuncio-card");
                card.innerHTML = `
                    <img src="${a.imagen}" alt="${a.nombre}">
                    <h4>${a.nombre}</h4>
                    <p>${a.descripcion}</p>
                    <a href="${a.enlace}" class="btn">Más Información</a>
                `;
                seccion.appendChild(card);
            });

            contenedor.appendChild(seccion);
        });
    })
    .catch(err => console.error('Error al cargar los anunciantes:', err));
</script>

</body>
</html>
